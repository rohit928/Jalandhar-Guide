<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/view">


        <TextView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Safety Shield"
            android:id="@+id/textView16"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/view" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:layout_width="423dp"
        android:layout_height="150dp"
        android:id="@+id/view2"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0b3eff">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2"
            android:src="@drawable/emer"
            android:layout_marginRight="276dp"
            android:layout_marginEnd="276dp"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="122dp"
            android:layout_marginStart="102dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Emergency Sound Alarm Walk With Me"
            android:id="@+id/textView18"
            android:layout_marginTop="108dp"
            android:layout_alignTop="@+id/view2"
            android:layout_centerHorizontal="true"
            android:textColor="#ff2330ff" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/wwm"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="250dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="423dp"
        android:layout_height="200dp"
        android:id="@+id/view3"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0b3eff">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:src="@drawable/police"
            android:onClick="police"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    Police          Hospital"
            android:id="@+id/textView17"
            android:layout_alignBottom="@+id/view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="80dp"
            android:textColor="#ff0959ff" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/hospital"
            android:layout_marginTop="0dp"
            android:layout_alignTop="@+id/view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="122dp"
            android:layout_marginStart="122dp"

            />
    </android.support.v7.widget.CardView>
</RelativeLayout>