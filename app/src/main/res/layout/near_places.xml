<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#ffffdfc0"

    android:orientation="vertical" >



    <View

        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:background="#000000"

        android:layout_marginTop="300dp"

        android:layout_above="@+id/gallery_relative_layout"

        android:id="@+id/view7" />


    <RelativeLayout


        android:id="@+id/gallery_relative_layout"

        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"

        android:layout_height="300dip"

        android:layout_alignParentTop="true"

        android:orientation="horizontal"

        >



        <HorizontalScrollView

            android:id="@+id/hor_scroll_view"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            >

            <LinearLayout

                android:id="@+id/gallery"

                android:layout_width="50dp"

                android:layout_height="wrap_content"

                android:orientation="horizontal" >

                <ImageView

                    android:id="@+id/image1"

                    android:layout_width="370dp"

                    android:layout_height="330dp"

                    android:src="@drawable/country"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image2"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/ramada"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image3"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/devi"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image4"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/haveli2"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image5"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/viva"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image6"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/wonder"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image7"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/linkers_haveli"

                    android:onClick="biggerView"/>

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome To Jalandhar!!!!!!"
        android:id="@+id/textView"
        android:background="#ff9098ff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Show Nearest Places To Me...."
        android:id="@+id/textView2"
        android:layout_below="@+id/gallery_relative_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffff90fd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTELS"
        android:id="@+id/button"
        android:onClick="Near"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffa0ff95" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHOOLS"
        android:onClick="Schools"
        android:id="@+id/button2"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true"
        android:background="#fff7ff6c" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATM"
        android:onClick="ATM"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff59fff3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOSPITALS"
        android:id="@+id/button4"
        android:onClick="Hospitals"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffbea7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BANKS"
        android:onClick="Bank"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:background="#fffdb7ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLLEGE"
        android:onClick="Colleges"
        android:id="@+id/button6"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:background="#ff83ffaf" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTAURANTS"
        android:onClick="Restaurents"
        android:id="@+id/button7"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:background="#ffff9c9e" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton14"
        android:src="@drawable/back"
        android:onClick="Prvs"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

</RelativeLayout>