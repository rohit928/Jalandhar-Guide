<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffff9671">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Pvr"
        android:text="PVR Cinemas"
        android:id="@+id/button14"
        android:background="#ffa9ffb1"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/button13"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignStart="@+id/button13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:src="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@drawable/top2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Cinema"
        android:onClick="Big"
        android:id="@+id/button13"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/imageView12"
        android:layout_centerHorizontal="true"
        android:background="#ffa9ffb1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PVR Curo"
        android:id="@+id/button15"
        android:onClick="Curo"

        android:layout_marginTop="49dp"
        android:layout_below="@+id/button14"
        android:layout_centerHorizontal="true"
        android:background="#ffa9ffb1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surb Multiplex"
        android:id="@+id/button16"
        android:onClick="Sarb"
        android:layout_below="@+id/button15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="#ffa9ffb1" />

</RelativeLayout>
