<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#ffffdfc0"

    android:orientation="vertical" >



    <View

        android:layout_width="match_parent"

        android:layout_height="50dp"

        android:background="#000000"

        android:layout_marginTop="300dp"

        android:layout_above="@+id/gallery_relative_layout"

        />


    <RelativeLayout


        android:id="@+id/gallery_relative_layout"

        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"

        android:layout_height="300dip"

        android:layout_alignParentTop="true"

        android:orientation="horizontal"

        >



        <HorizontalScrollView

            android:id="@+id/hor_scroll_view"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            >

            <LinearLayout

                android:id="@+id/gallery"

                android:layout_width="50dp"

                android:layout_height="wrap_content"

                android:orientation="horizontal" >

                <ImageView

                    android:id="@+id/image1"

                    android:layout_width="370dp"

                    android:layout_height="300dp"

                    android:src="@drawable/havels"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image2"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/haveli3"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image3"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/haveli4"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image4"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/haveli5"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image5"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/haveli6"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image6"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/haveli7"

                    android:onClick="biggerView"/>

                <ImageView

                    android:id="@+id/image7"

                    android:layout_width="370dp"

                    android:layout_height="270dp"

                    android:src="@drawable/linkers_haveli"

                    android:onClick="biggerView"/>

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" RESTAURANTS OF JALANDHAR!!!!!!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff9098ff" />


</RelativeLayout>